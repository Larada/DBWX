.db_data{
  display: inline-block;
  margin-top: 850rpx;
  width: 80%;
  height: auto;
  /* border: 2rpx solid blue; */

  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.db_get{
  width: 100%;
  height: auto;
  background-color: #1976d2;
  margin-bottom: 40rpx;
