}
.reply_part{
  text-align: center;
  line-height: 120rpx;
  color: ceddcb;
  font-size: larger;
  height: 120rpx;
  
}

.get_part{
  text-align: center;
  line-height: 120rpx;
  color: rgb(226, 227, 231);
  font-size: larger;
  height: 120rpx;
}
.top{
  display: flex;
  flex-direction: row;
  /* border: 1rpx solid black; */
}
.sort{
  /* display: inline-block; */
