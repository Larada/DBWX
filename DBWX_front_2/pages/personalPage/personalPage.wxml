    <!-- 2.漂流瓶列表db_data -->
    <view class="db_data">
      <!-- 2-1.打捞得到的漂流瓶列表 -->
      <view class="db_get">
        <view class="get_map" >
          <!-- 列表表头 -->
          <view class="get_part" data-index="1" bind:tap="tap_db_get">已接收漂流瓶</view>
          <!-- 隐藏的列表内容 -->
          <!-- 弹出窗口：标签 -->
          <view wx:if="{{showIndex_get == 1}}">
            <view wx:if="{{array_get}}">
              <view class="top">
                <view class="sort" data-index="4" bindtap="tap_db_get_sort">排序</view>
                <view class="tag" data-index="3" bindtap="tap_db_get_tag">标签</view>
              </view>
              <!-- 排序显示的位置 -->
              <view wx:if="{{showIndex_get_top == 4}}">
                <view class="sort_area">
                  <radio-group bindchange="get_sort_choice">
                    <view class="sort_ch">
                      <radio value="sort_1" >按接收时间先后排序</radio>
                      <radio value="sort_2" >按漂流瓶内容的多少排序</radio>
                    </view>
                  </radio-group>
                </view>
              </view>
              <!-- 标签显示的位置 -->
              <view wx:if="{{showIndex_get_tag == 3}}">
                <view wx:if="{{array_get_tag}}">
                  <view class="tag_area">
                    <radio-group bindchange="tag_choice">
                      <view class="tag_ch">
                        <radio value="tag_1" style="">标签1</radio>
                        <radio value="tag_2" >标签11111</radio>
                        <radio value="tag_3" >标签1</radio>
                        <radio value="tag_4" >标签11111</radio>
                        <radio value="tag_5" >标签1</radio>
                        <radio value="tag_6" >标签11111</radio>
                      </view>
                    </radio-group>
                    <view class="bu_tag_change">
                      <button class="add_tag">增加</button>
                      <button class="del_tag">删除</button>
                    </view>
                  </view>
                </view>
              </view>
              <view class="get_solo">
                <view class="db_content">111111111 11111111111111111111 1111111111111111111111111111111111111111111111111111111111111111</view>
                <view class="options_place">
                  <button class="option_2">再投递</button>
                  <view class="options">
                    <button class="option">回复</button>
                    <button class="option">删除</button>
                    <button class="option">举报</button>
