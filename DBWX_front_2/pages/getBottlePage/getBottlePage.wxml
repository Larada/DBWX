<!--pages/getBottlePage/getBottlePage.wxml-->
<view class="getB">
  <view class="sea">
  <!-- 图：瓶子 -->
    <!-- 背景海，+bgm；+日月背景 -->
    <!-- 按下打捞->动画：瓶子逐渐显现在半透明框中，摇两下 -->
    
  </view>
  <view class="target"></view>

  <view class="checks_get">
        <view style="font-size: 25rpx;color: white;">——内容倾向——</view>
        <checkbox-group bindchange="preferContents" >
        <!-- 爱好，生活，学习，工作，情感-Hobbies, life, study, work, emotions -->
          <checkbox value="hobbies" style="scale: 0.8;">爱好</checkbox>
          <checkbox value="life" style="scale: 0.8;">生活</checkbox>
          <checkbox value="study" style="scale: 0.8;">学习</checkbox>
          <checkbox value="work" style="scale: 0.8;">工作</checkbox>
          <checkbox value="emotions" style="scale: 0.8;">情感</checkbox>
        </checkbox-group>
  </view>

  <view class="button">
    <button bindtap="getButton" class="getButton">打捞一个漂流瓶</button>
    <!-- 内容倾向放底下 -->
  </view>
  <view class="sunMoon"></view>

  <!-- 显示打捞到的漂流瓶页面 -->
  <view class="db_content">
    <!-- 漂流瓶字 -->
    <view class="text_content">这是示例的漂流瓶文字内容这是示例的漂流瓶文字内容这是示例的漂流瓶文字内容这是示例的漂流瓶文字内容这是示例的漂流瓶文字内容这是示例的漂流瓶文字内容</view>
    <!-- 投放人的信息 -->
    <view class="drop_one">
      <!-- 格式是"由 x y " -->
      <!-- x:匿名用户/小蓝(id:11111111) y:投放给陌生人/指定投放给你 -->
      <!-- eg.由 匿名用户 投放给陌生人 -->
      <view style="display: inline-block;">由*</view>
      <view style="display: inline-block;">匿名用户</view>
      <view style="display: inline-block;">*</view>
      <view style="display: inline-block;">投放给陌生人</view>
    </view>
    <!-- 确定 -->
    <!-- 点击确定后更改db_content的z-index为0，使这个界面隐藏起来 -->
    <view>
      <button class="bu_confirm">确定</button>
    </view>
    
  </view>
</view>
